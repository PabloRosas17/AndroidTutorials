<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View"/>
        <variable
            name="mViewModel"
            type="coffee.flavors.androidtutorials.mdvm.views.activities.ViewActivityTopMVDM"/>
    </data>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">
        <androidx.viewpager.widget.ViewPager
            android:id="@+id/lt_ViewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
            <com.google.android.material.tabs.TabLayout
                android:id="@+id/lt_TabLayout"
                style="@style/MtrlTheme.TabLayout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <com.google.android.material.tabs.TabItem
                    android:id="@+id/lt_item_fragment_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tab4-FragmentOne"/>
                <com.google.android.material.tabs.TabItem
                    android:id="@+id/lt_item_fragment_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tab4-FragmentTwo"/>
            </com.google.android.material.tabs.TabLayout>
        </androidx.viewpager.widget.ViewPager>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>