<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View"/>
        <variable
            name="mViewModel"
            type="coffee.flavors.androidtutorials.mdvm.views.fragments.ViewFragmentTwoMVDM"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorLightGhostLight">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/mlt_btn_cnr_f2"
            android:layout_width="0dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/gd_f2_05_ver"
            app:layout_constraintEnd_toEndOf="@id/gd_f2_95_ver"
            android:backgroundTint="@color/colorLightDark"
            android:text="FragmentTwo"
            android:textColor="@color/colorLightGhostLight"
            app:rippleColor="@color/colorLightSecondary"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gd_f2_05_ver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.05" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gd_f2_95_ver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.95" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>